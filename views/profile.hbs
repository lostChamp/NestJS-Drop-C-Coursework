<div class="container">
  <section class="my-3">
      <div class="row">
        <div class="col-lg-4">
          <p>Последние заказы</p>
          {{#if orders}}
            <div class="card mb-4 mb-lg-0">
              <div class="card-body p-0">
                <ul class="list-group list-group-flush rounded-3">
                  {{#each orders}}
                    {{#with this as | item |}}
                      <li class="list-group-item d-flex-wrap p-3">
                        <p class="mb-0">Статус: {{item.status}}</p>
                        <p class="mb-0">Товар/Услуга: {{item.service.name}}{{item.ware.item}}</p>
                      </li>
                    {{/with}}
                  {{/each}}
                </ul>
              </div>
            </div>
          {{else}}
            <p>У вас нет заказов :(</p>
          {{/if}}
        </div>
        <div class="col-lg-8">
          <p>Информация об аккаунте</p>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">ФИО</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{user.full_name}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Эл.почта</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{user.email}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Телефон</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{user.phone_number}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Дата создания</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{user.created_at}}</p>
                </div>
              </div>
            </div>
          </div>
          {{#if selfAccount}}
            <a href="/user/edit/{{user.id}}"><button type="button" class="btn btn-primary me-3">Изменить данные</button></a>
            <a href="/user/edit/password/{{user.id}}"><button type="button" class="btn btn-primary me-3">Изменить пароль</button></a>
            <a href="/user/delete/account/{{user.id}}"><button type="button" class="btn btn-primary me-3">Удалить аккаунт</button></a>
          {{/if}}
        </div>
      </div>
  </section>
</div>